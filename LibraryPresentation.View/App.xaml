<Application x:Class="LibraryPresentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LibraryPresentation"
             xmlns:viewmodels="clr-namespace:LibraryPresentation.ViewModel"
             xmlns:views="clr-namespace:LibraryPresentation.View"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:BookMasterViewModel}">
            <views:BookMasterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:BookDetailViewModel}">
            <views:BookDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:UserMasterViewModel}">
            <views:UserMasterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:UserDetailViewModel}">
            <views:UserDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StateMasterViewModel}">
            <views:StateMasterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StateDetailViewModel}">
            <views:StateDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:BorrowingMasterViewModel}">
            <views:BorrowingMasterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:BorrowingDetailViewModel}">
            <views:BorrowingDetailView/>
        </DataTemplate>
    </Application.Resources>
</Application>
